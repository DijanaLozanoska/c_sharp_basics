@using proba6.Models
@model List<Product>
@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>


<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr class="text-uppercase">
                <th>PRODUCT PICTURE</th>
                <th>Product Name</th>
                <th>Product Description</th>
                <th>Product Category</th>
                <th>Product Price</th>
                <th>Additonal Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.ProductPicture" width="200px" height="150px" />
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductDescription</td>
                    <td>@item.Categories.CategoryName</td>
                    <td>@item.ProductPrice</td>
                    <td>
                        <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6 text-uppercase">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to Home</a>
    </div>
    <div class="col-6 text-right">
        <h3>Total Amount</h3>
        <h4>Sum Total of Products: @Model.Sum(c => c.ProductPrice) </h4>
        <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-info">Checkout</a>
    </div>
</div>
