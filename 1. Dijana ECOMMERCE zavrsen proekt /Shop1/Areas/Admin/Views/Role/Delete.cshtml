@{
    ViewData["Title"] = "Delete";
}
<br />
<br />
<br />
<div class="row col-md-10 offset-md-1 text-uppercase d-flex align-items-center">
    <div class="text">
        <h2 class="text-md-start text-center mb-md-0" style="letter-spacing: 10px">
            Delete Role
        </h2>
        <hr />
    </div>
    <form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">
        <br />
        <div class="row mx-0 pb-3">
            <div class="col-md-8 offset-md-2 px-1 ms-lg-0 ms-md-0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group border-dark row">
                    <div class="col-sm-12 col-md-8 col-lg-4 text-md-start text-center py-1">
                        <h5 class="pt-lg-2"> <label>Role Name</label></h5>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-8 py-1">
                        <input type="hidden" name="id" value="@ViewBag.id" class="" />
                        <input readonly="readonly" id="name" name="name" value="@ViewBag.name" class="form-control rounded-0 border-dark shadow-none" required="required" />
                    </div>
                </div>
                <div class="profile pb-2 text-md-start text-center">
                    <h5 class="pt-4">Do you want to delete this role ?</h5>
                    <input type="submit" class="btn-red btn-red1" value="DELETE" />
                    <a asp-action="Index" class="btn-black btn-black1">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>


