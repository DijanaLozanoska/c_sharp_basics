@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<br />
<div class="row col-md-10 offset-md-1 text-uppercase d-flex align-items-center">
    <div class="text">
        <h2 class="text-md-start text-center mb-md-0" style="letter-spacing: 10px">
            Create Role
        </h2>
        <hr />
    </div>
    <form asp-action="Create" method="post">
        <br />
        <div class="row mx-0 pb-3">
            <div class="col-md-8 offset-md-2 px-1 ms-lg-0 ms-md-0">
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                <h5 class="text-danger text-md-start text-center">@ViewBag.message</h5>
                <div class="form-group border-dark row">
                    <div class="col-sm-12 col-md-8 col-lg-4 text-md-start text-center py-1">
                        <h5 class="pt-lg-2"> <label>Role Name</label></h5>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-8 py-1">
                        <input id="name" name="name" required="required" value="@ViewBag.name" class="form-control rounded-0 border-dark shadow-none" />
                    </div>
                </div>
                <br />
                <div class="profile pb-2 text-md-start text-center">
                    <input type="submit" class="btn-black btn-black1" value="SAVE" />
                    <a asp-action="Index" class="btn-black btn-black1"> Back to List </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>$(document).ready(function () {
            $("#user-form").validate({
                rules: {
                    UserName: {
                        required: true,
                    },
                    PasswordHash: {
                        required: true,
                    }
                },
                messages: {
                    UserName: "Enter your email",
                    PasswordHash: "Enter your password"
                }

            });
        });</script>
}

