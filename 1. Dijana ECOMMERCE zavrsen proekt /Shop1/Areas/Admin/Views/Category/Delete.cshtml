@model Shop1.Models.Category
@{
    ViewData["Title"] = "Delete";
}
<br />
<br />
<br />
<div class="row col-md-10 offset-md-1 text-uppercase d-flex align-items-center">
    <div class="text">
        <h2 class="text-md-start text-center mb-md-0" style="letter-spacing: 10px">
            Delete Category
        </h2>
        <hr />
    </div>
    <form asp-action="Delete" method="post">
        <br />
        <div class="row mx-0 pb-3">
            <input type="hidden" asp-for="Id" />
            <div class="col-md-8 offset-md-2 px-1 ms-lg-0 ms-md-0">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group border-dark row">
                    <div class="col-sm-12 col-md-8 col-lg-4 text-md-start text-center py-1">
                        <h5 class="pt-lg-2"> <label asp-for="CategoryName"></label></h5>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-8 py-1">
                        <input asp-for="CategoryName" readonly="readonly" class="form-control rounded-0 border-dark shadow-none" />
                    </div>
                    <span asp-validation-for="CategoryName" class="col-12 text-danger rounded-0 border-dark"></span>
                </div>
                <div class="profile pb-2 text-md-start text-center">
                    <h5 class="pt-4">Do you want to delete this product ?</h5>
                    <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="btn-red btn-red1" value="DELETE" />
                    <a asp-action="Index" class="btn-black btn-black1">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


