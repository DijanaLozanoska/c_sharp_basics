@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<br />
<br />
<br />
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

<div class="sl-vertical social-wrap oxi_icon_left" style="padding-left:0px;">


    <a class="social_login facebook" url="/auth/facebook?shop=skkn-com.myshopify.com&amp;parenturl=https://skknbykim.com/account/login?return_url=%2Faccount" href="/auth/facebook?shop=skkn-com.myshopify.com&amp;parenturl=https://skknbykim.com/account/login?return_url=%2Faccount">
        <i class="fa fa-facebook oxi_icon oxi_icon_facebook"></i>
        <span>Facebook</span>
    </a>


    <a class="social_login google" url="/auth/google?shop=skkn-com.myshopify.com&amp;parenturl=https://skknbykim.com/account/login?return_url=%2Faccount" href="/auth/google?shop=skkn-com.myshopify.com&amp;parenturl=https://skknbykim.com/account/login?return_url=%2Faccount">
        <i class="fa fa-google oxi_icon oxi_icon_google"></i>
        <span>Google</span>
    </a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
